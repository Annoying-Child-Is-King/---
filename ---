(function() {
  // Remove previous banner if it exists
  const existingBanner = document.getElementById("code-shutdown-banner");
  if (existingBanner) existingBanner.remove();

  // Create the banner
  const banner = document.createElement("div");
  banner.id = "code-shutdown-banner";
  banner.style.position = "fixed";
  banner.style.top = "0";
  banner.style.left = "0";
  banner.style.width = "100%";
  banner.style.background = "#fce8e6";
  banner.style.color = "#5f2120";
  banner.style.borderBottom = "1px solid #e0b4b4";
  banner.style.padding = "15px";
  banner.style.fontFamily = "Arial, sans-serif";
  banner.style.fontSize = "16px";
  banner.style.zIndex = "9999";
  banner.style.textAlign = "center";
  banner.innerHTML = `
    <strong>This Code Has Been Shut Down Because Mason Decided To Steal It By Using My Computer...</strong>
    <div style="margin-top: 5px; font-weight: bold;">L MASON</div>
  `;

  document.body.prepend(banner);
})();
